@model Student
@{
    ViewData["Title"] = "GetStudentById";
}

<h1>GetStudentById</h1>
<div class="row m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>@Model?.Name</h1>
            </div>
            <div class="card-body text-center">
                <h4>Student Id : @Model?.Id</h4>
                <h4>Student name : @Model?.Name</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" asp-controller="Student" class="btn btn-primary">
                    Back
                </a>
            </div>
        </div>
    </div>
</div>
